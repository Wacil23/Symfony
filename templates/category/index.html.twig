{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
	<h1>Toutes les catégories :</h1>
	{% for c in category %}
		<div>
			<h2>{{ loop.index }} / {{ c.name }}</h2>
        	<a href="{{ path("category_show", { categoryName: c.name }) }}">Voir les séries</a>
		</div>
	{% else %}
		Aucune catégorie trouvée.
	{% endfor %}

	 <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}